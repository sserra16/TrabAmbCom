<body>
    <main>
        <%- include("partials/imgs") %>

            <div class="container">

                <section id="imgs" onclick="Details.showDetails('.selected')">
                    <img class="selected" src="/assets/memoria.jpg" alt="">
                    <img src="/assets/placamae.jpg" alt="">
                    <img src="/assets/processador.webp" alt="">
                </section>

                <div id="text" class="words visible">
                    <h1 class="title">Memória RAM</h1>
                    <p class="text">Alta perfomance e velocidade</p>
                </div>

                <div class="words">
                    <h1 class="title">Placa Mãe</h1>
                    <p class="text">Perfeita para seu desktop</p>
                </div>

                <div class="words">
                    <h1 class="title">Processador intel i9</h1>
